    <script type="text/javascript" src="node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript">
    <% if (message.length > 0) { %>
    $(document).ready(function () {
    $("#the-toggle").click();
    });
    <% } %>
    </script>
  </head>
  <body>
    <h1 class= "jumbotron text-center"> ACE CLUB - Sign In </h1>
    <img src= "globe-hands.png" class="img-circle img-responsive iconr">
    <img src= "globe-hands.png"  class="img-circle img-responsive iconl">
    <nav class ="navbar navbar-fixed-top navbar-inverse">
    <div class="container-fluid">
    <ul class = "nav navbar-nav">
        <li>
          <a href="/">Home</a>
        </li>
      <li class = "active">
          <a href="/aboutus">About Us</a>
        </li>
      <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Resources</a>
          <ul class="dropdown-menu">
              <li><a href="/lesson">Lesson Plans</a></li>
              <li><a href="/otherresources">Other Resources</a></li>
          </ul>
      </li>
      <li class = "dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Videos</a>
          <ul class=dropdown-menu>
              <li><a href="/video_teach">Meetings</a></li>
              <li><a href="/video_meeting">Teaching</a></li>
          </ul>
        </li>
      <li>
          <a href="/contactus">Contact Us</a>
