              <li><a href="/registration">Individuals</a></li>
          </ul>
        </li>
      </ul>
    </div>
    </nav>
    <form method="post" action="/login">
       <div class="form-group">
         User Name: <input name="username" type="text" class="form-control"></input> <br>
      </div>
       <div class="form-group">
         Password: <input name="password" type="password" class="form-control"> </input> <br>
      </div>
      <button type="submit">Submit</button>
    </form>
    <% if (message.length > 0) { %>
     <div class="alert alert-danger"><%= message %></div>
     <% } %>
     <% if (redirect.length > 0) { %>
      <div class="alert alert-danger"><%= redirect %></div>
      <% } %>
