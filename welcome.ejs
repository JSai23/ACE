<html>
  <head>
    <title> Welcome</title>
    <link rel="stylesheet" type="text/css" href="node_modules/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="welcome.css">
    <script type="text/javascript" src="node_modules/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript">
    <% if (message.length > 0) { %>
    $(document).ready(function () {
    $("#the-toggle").click();
    });
    <% } %>
    </script>
  </head>
  <body>
    <h1 class= "jumbotron text-center" id="header"> You Signed In </h1>
    <img src= "globe-hands.png" class="img-circle img-responsive iconr">
    <img src= "globe-hands.png"  class="img-circle img-responsive iconl">
    <nav class ="navbar navbar-fixed-top navbar-inverse">
    <div class="container-fluid">
    <ul class = "nav navbar-nav">
        <li>
          <a href="/">Home</a>
        </li>
      <li class = "active">
          <a href="/aboutus">About Us</a>
        </li>
      <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Resources</a>
          <ul class="dropdown-menu">
              <li><a href="/lesson">Lesson Plans</a></li>
              <li><a href="/otherresources">Other Resources</a></li>
          </ul>
      </li>
      <li class = "dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Videos</a>
          <ul class=dropdown-menu>
              <li><a href="/video_teach">Meetings</a></li>
              <li><a href="/video_meeting">Teaching</a></li>
          </ul>
        </li>
      <li>
          <a href="/contactus">Contact Us</a>
        </li>
      <li class = "dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Registration</a>
          <ul class="dropdown-menu">
              <li><a href="/registration-org">Organizations</a><li>
              <li><a href="/registration">Individuals</a></li>
          </ul>
        </li>
        <% if (user) { %>
          <li id="login-list">
              <a href="/logout">Logout</a>
            </li>
            <% } else {%>
              <li class = "dropdown" id="login-list">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="the-toggle">Sign in</a>
                  <ul class="dropdown-menu pull-right" id="form-drop">
                      <li>
                         <form method="post" action="/login" id="login-form">
                           <div class="form-group">
                             User Name: <input name="username" type="text" class="form-control"></input> <br>
                          </div>
                           <div class="form-group">
                             Password: <input name="password" type="password" class="form-control"> </input> <br>
                          </div>
                          <% if (message.length > 0) { %>
                           <div class="alert alert-danger"><%= message %></div>
                           <% } %>
                          <button type="submit">Submit</button>
                        </form>
                      </li>
                  </ul>
                </li>
            <% } %>
      </ul>
    </div>
    </nav>
  <h1 class="jumbotron text-center">Welcome!!!!</h1>
